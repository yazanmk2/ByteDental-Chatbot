# ============================================================
# Senior Dental AI Chatbot - Environment Variables
# ============================================================
# Copy this file to .env and customize for your environment
# ============================================================

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=Senior Dental AI Chatbot
APP_VERSION=1.0.0
ENVIRONMENT=production  # development, staging, production
DEBUG=false

# ===========================================
# API SERVER
# ===========================================
# IMPORTANT: Bind to localhost only for security
# This service should only be accessed by the Laravel backend
API_HOST=127.0.0.1
API_PORT=8001
WORKERS=1  # Keep at 1 for model loading

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json or text

# ===========================================
# MODEL CONFIGURATION
# ===========================================
BYTEDENT_LLM_MODEL=Qwen/Qwen2.5-3B-Instruct
BYTEDENT_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
USE_8BIT_QUANTIZATION=false  # Set to true if you have GPU
DEVICE=cpu  # auto, cuda, cpu

# ===========================================
# RAG CONFIGURATION
# ===========================================
CHUNK_SIZE_TOKENS=400
CHUNK_OVERLAP_TOKENS=80
RETRIEVAL_TOP_K=5
MIN_SIMILARITY_THRESHOLD=0.25
HANDOFF_SIMILARITY_THRESHOLD=0.30

# ===========================================
# GENERATION SETTINGS
# ===========================================
MAX_NEW_TOKENS=512
TEMPERATURE=0.1
TOP_P=0.9

# ===========================================
# CORS (comma-separated origins)
# ===========================================
CORS_ORIGINS=*

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# ===========================================
# SECURITY (optional)
# ===========================================
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here
